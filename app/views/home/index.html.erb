<ul>
<% @products.each do |product| %>
  <li>
    <h1><%= product.name %></h1>
    <img src="<%= product.image %>" />
    <span>P <%= product.price %>.00 (<%= product.stock_qty %> servings available)</span>
    <p class="ingredients"><%= product.raw_materials.collect(&:name).join(', ') %></p>
  </li>
<% end %>
</ul>